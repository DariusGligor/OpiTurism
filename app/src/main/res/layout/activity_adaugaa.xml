<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttonu"
    tools:context=".adaugaa">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="chooseImage"
        android:src="@drawable/mood"
        android:layout_below="@id/descriere"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nume"
        android:hint="Nume"
        android:maxLength="25"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriere"
        android:layout_below="@+id/nume"
        android:hint="Descriere"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="36dp"
        android:text="Recomand" />

    <Button
        android:id="@+id/Incarca"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="90dp"
        android:background="@drawable/buton"
        android:onClick="storeImage"
        android:text="Incarca" />
</RelativeLayout>